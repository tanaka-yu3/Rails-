<body>
  <% if flash[:destroy]%>
   <p class="flash-txt"><%= flash[:destroy] %></p>
  <% end %><br><br><br>

 <h1>Books</h1>
 <table>
  <tr>
    <th>Title</th><th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @books.each do |book| %>
  <tr class="table-txt">
    <th><%=book.title%></th>
    <th><%=book.body%></th>
    <th><%= link_to "show",book_path(book.id)%></th>
    <th><%= link_to "edit",edit_book_path(book.id)%></th>
    <th><%= link_to "destroy", book_path(book.id), method: :delete ,data:{confirm:"Are you sure?"}%></th>
  </tr>
  <% end %>
 </table><br>

 <h2>New book</h2><br>

 <% if @book.errors.any? %>
  <div class="error-box">
   <p class=" error-title">2 errors prohibited this book from being saved:</p>
   <ul>
     <li>Title can't be blank</li>
     <li>Body can't be blank</li>
   </ul>
   </div>
 <% end %>

 <%= form_for(@book) do |f| %>

 <p>Title</p>
 <%= f.text_field :title %>

 <p>Body</p>
 <%= f.text_area :body %><br>
 <%= f.submit 'Create Book' %>
 <% end %>
</body>
